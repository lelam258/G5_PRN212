<Page x:Class="Presentation_Layer.AdminReportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:conv="clr-namespace:Presentation_Layer"
      xmlns:local="clr-namespace:Presentation_Layer"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminReportPage">
    <Page.Resources>
        <!-- Style chung cho DataGrid -->
        <conv:ValueToWidthConverter x:Key="WidthConverter"/>
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="#F5F6FA"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#FAFAFA"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="ColumnHeaderHeight" Value="40"/>
            <Setter Property="RowHeight" Value="35"/>
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#2C3E50"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Padding" Value="10,5"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="8"/>
                        <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style cho Button xuất -->
        <Style TargetType="Button">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#2980B9"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Báo cáo thống kê"
               FontSize="28"
               FontWeight="Bold"
               Foreground="#2C3E50"
               Margin="0,0,0,20"/>

        <!-- Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- DataGrid Section -->
            <Border Grid.Column="0"
              Background="White"
              CornerRadius="5"
              BorderBrush="#DDD"
              BorderThickness="1"
              Padding="10">
                <DataGrid x:Name="ReportDataGrid"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  HeadersVisibility="Column"
                  RowHeight="30"
                  ColumnHeaderHeight="35"
                  AlternatingRowBackground="#F9FBFC"
                  GridLinesVisibility="Horizontal">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Chỉ số"        Binding="{Binding Metric}"       Width="*"/>
                        <DataGridTextColumn Header="Giá trị"       Binding="{Binding Value, StringFormat=N2}"        Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <!-- Chart Section -->
            <Border Grid.Column="2"
              Background="White"
              CornerRadius="5"
              BorderBrush="#DDD"
              BorderThickness="1"
              Padding="10">
                <StackPanel>
                    <TextBlock Text="Biểu đồ thống kê" 
                              FontSize="16" 
                              FontWeight="Bold" 
                              HorizontalAlignment="Center" 
                              Margin="0,0,0,15"/>
                    <ItemsControl x:Name="ChartItemsControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="0,5">
                                    <TextBlock Text="{Binding Metric}" FontSize="12" FontWeight="SemiBold"/>
                                    <StackPanel Orientation="Horizontal">
                                        <Rectangle Fill="#3498DB" 
                                                  Height="20" 
                                                  Width="{Binding Value, Converter={StaticResource WidthConverter}}"
                                                  Margin="0,2"/>
                                        <TextBlock Text="{Binding Value, StringFormat=N1}" 
                                                  VerticalAlignment="Center" 
                                                  Margin="5,0"/>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Export Buttons -->
        <StackPanel Grid.Row="2" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right" 
                   Margin="0,15,0,0">
            <Button x:Name="ExportExcelButton" 
                   Content="📊 Xuất Excel" 
                   Click="ExportExcelButton_Click"/>
            <Button x:Name="ExportPdfButton" 
                   Content="📄 Xuất PDF" 
                   Click="ExportPdfButton_Click"/>
        </StackPanel>
    </Grid>
</Page>