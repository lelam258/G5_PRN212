<Page x:Class="Presentation_Layer.AdminCertificatePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d"
      Title="AdminCertificatePage"
      d:DesignHeight="600" d:DesignWidth="900">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Filter -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
            <RowDefinition Height="Auto"/>
            <!-- Actions -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
               Text="Quản lý Chứng chỉ"
               FontSize="28"
               FontWeight="Bold"
               Foreground="#2C3E50"
               Margin="0,0,0,10"/>

        <!-- Filter: chọn khóa và load danh sách đủ điều kiện -->
        <Border Grid.Row="1"
            Background="White"
            CornerRadius="5"
            BorderBrush="#DDD"
            BorderThickness="1"
            Padding="10"
            Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" >
                <TextBlock Text="Khóa học:" VerticalAlignment="Center"/>
                <ComboBox x:Name="CourseComboBox"
                  Margin="10,0,0,0"
                  Width="200"
                  DisplayMemberPath="CourseName"
                  SelectedValuePath="CourseId"/>
                <Button Content="Tải danh sách"
                Margin="10,0,0,0"
                Width="146"
                Height="30"
                Background="#27AE60"
                Foreground="White"
                Click="LoadEligible_Click"/>
            </StackPanel>
        </Border>

        <!-- DataGrid: danh sách sinh viên đủ điều kiện -->
        <Border Grid.Row="2"
            Background="White"
            CornerRadius="5"
            BorderBrush="#DDD"
            BorderThickness="1"
            Padding="10">
            <DataGrid x:Name="EligibleDataGrid"
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                IsReadOnly="True"
                RowHeight="30"
                ColumnHeaderHeight="35"
                AlternatingRowBackground="#F9FBFC"
                GridLinesVisibility="Horizontal"
                SelectionMode="Extended"
                SelectionUnit="FullRow">
                <DataGrid.Columns>
                    <DataGridCheckBoxColumn Header="Chọn" Binding="{Binding IsSelected}" Width="50"/>
                    <DataGridTextColumn  Header="Mã SV" Binding="{Binding StudentCode}" Width="100"/>
                    <DataGridTextColumn  Header="Họ tên" Binding="{Binding StudentName}" Width="*"/>
                    <DataGridTextColumn  Header="Khóa học" Binding="{Binding CourseName}" Width="200"/>
                    <DataGridTemplateColumn Header="Hành động" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Cấp"
                        Tag="{Binding}"
                        Padding="5,2"
                        Background="#2980B9"
                        Foreground="White"
                        Click="GenerateSingle_Click"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Action buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Cấp cho tất cả đã chọn"
              Width="150"
              Height="30"
              Background="#D35400"
              Foreground="White"
              Click="GenerateSelected_Click"/>
        </StackPanel>
    </Grid>
</Page>
