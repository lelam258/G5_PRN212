<Page x:Class="Presentation_Layer.AdminCertificatePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d"
      Title="AdminCertificatePage"
      d:DesignHeight="600" d:DesignWidth="900">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Filter -->
            <RowDefinition Height="*"/>
            <!-- List -->
            <RowDefinition Height="Auto"/>
            <!-- Actions -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
               Text="Quản lý Chứng chỉ"
               FontSize="28"
               FontWeight="Bold"
               Foreground="#2C3E50"
               Margin="0,0,0,10"/>

        <!-- Filter: chọn khóa và tải danh sách -->
        <Border Grid.Row="1"
            Background="White"
            CornerRadius="5"
            BorderBrush="#DDD"
            BorderThickness="1"
            Padding="10"
            Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Khóa học:" VerticalAlignment="Center"/>
                <ComboBox x:Name="CourseComboBox"
                  Width="250"
                  DisplayMemberPath="CourseName"
                  SelectedValuePath="CourseId"/>
                <Button Content="Tải danh sách" Width="120" Height="30"
                Background="#27AE60" Foreground="White"
                Click="LoadEligible_Click"/>
                <Button Content="Mặc định" Width="90" Height="30"
                Background="#7F8C8D" Foreground="White"
                Click="ResetFilter_Click"/>
            </StackPanel>
        </Border>

        <!-- DataGrid: sinh viên đủ điều kiện -->
        <Border Grid.Row="2"
            Background="White"
            CornerRadius="5"
            BorderBrush="#DDD"
            BorderThickness="1"
            Padding="10">
            <DataGrid x:Name="EligibleDataGrid"
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                SelectionMode="Extended"
                RowBackground="#F9FBFC"
                AlternatingRowBackground="White"
                GridLinesVisibility="Horizontal"
                SelectionUnit="FullRow">
                <DataGrid.Columns>
                    <!-- Checkbox chọn từng sinh viên -->
                    <DataGridCheckBoxColumn Header="Chọn" Binding="{Binding IsSelected}" Width="50" IsReadOnly="False"/>
                    <DataGridTextColumn    Header="Mã SV" Binding="{Binding StudentCode}" Width="120" IsReadOnly="True"/>
                    <DataGridTextColumn    Header="Họ tên" Binding="{Binding StudentName}" Width="2*" IsReadOnly="True"/>
                    <DataGridTextColumn    Header="Khóa học" Binding="{Binding CourseName}" Width="2*" IsReadOnly="True"/>
                    <DataGridTemplateColumn Header="Cấp từng" Width="100" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Cấp"
                        Tag="{Binding}"
                        Padding="5,2"
                        Background="#2980B9"
                        Foreground="White"
                        Click="GenerateSingle_Click"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Action: cấp cho tất cả các mục đã chọn -->
        <StackPanel Grid.Row="3"
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                Margin="0,10,0,0">
            <Button Content="Cấp cho tất cả đã chọn"
              Width="180" Height="35"
              Background="#D35400" Foreground="White"
              Click="GenerateSelected_Click"/>
        </StackPanel>
    </Grid>
</Page>