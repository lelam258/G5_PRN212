<Page x:Class="Presentation_Layer.AdminGradingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      Title="AdminGradingPage"
      d:DesignHeight="600" d:DesignWidth="900">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- header -->
            <RowDefinition Height="*"/>
            <!-- nội dung chính -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
               Text="📊 Quản lý Điểm"
               FontSize="28"
               FontWeight="Bold"
               Foreground="#2C3E50"
               Margin="0,0,0,10"/>

        <!-- Main: form & grid -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Form chỉnh điểm -->
            <Border Grid.Column="0"
              Background="White"
              CornerRadius="5"
              BorderBrush="#DDD"
              BorderThickness="1"
              Padding="20">
                <StackPanel>
                    <TextBlock Text="Chi tiết chấm điểm"
                     FontSize="20"
                     FontWeight="SemiBold"
                     Margin="0,0,0,10"/>

                    <TextBlock Text="Assessment ID" FontWeight="SemiBold"/>
                    <TextBox x:Name="AssessmentIdTextBox" IsReadOnly="True"/>

                    <TextBlock Text="Sinh viên (Mã SV)" FontWeight="SemiBold"/>
                    <TextBox x:Name="StudentCodeTextBox" IsReadOnly="True"/>

                    <TextBlock Text="Điểm" FontWeight="SemiBold"/>
                    <TextBox x:Name="ScoreTextBox"/>

                    <TextBlock Text="Ngày nộp" FontWeight="SemiBold"/>
                    <TextBox x:Name="SubmissionDateTextBox" IsReadOnly="True"/>

                    <Button x:Name="SaveScoreButton"
                  Content="Lưu điểm"
                  Width="100" Height="30"
                  Background="#2980B9"
                  Foreground="White"
                  HorizontalAlignment="Center"
                  Margin="0,10,0,0"
                  Click="SaveScoreButton_Click"/>
                </StackPanel>
            </Border>

            <GridSplitter Grid.Column="1"
                    Width="10"
                    Background="#CCC"/>

            <!-- DataGrid danh sách bài làm -->
            <Border Grid.Column="2"
              Background="White"
              CornerRadius="5"
              BorderBrush="#DDD"
              BorderThickness="1"
              Padding="10">
                <DataGrid x:Name="ResultsDataGrid"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionChanged="ResultsDataGrid_SelectionChanged"
                  RowHeight="30"
                  ColumnHeaderHeight="35"
                  AlternatingRowBackground="#F9FBFC"
                  GridLinesVisibility="Horizontal">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Assessment ID"
                                Binding="{Binding AssessmentId}"
                                Width="*"/>
                        <DataGridTextColumn Header="Mã SV"
                                Binding="{Binding Student.StudentCode}"
                                Width="*"/>
                        <DataGridTextColumn Header="Điểm"
                                Binding="{Binding Score}"
                                Width="*"/>
                        <DataGridTextColumn Header="Ngày nộp"
                                Binding="{Binding SubmissionDate, StringFormat={}{0:dd/MM/yyyy HH:mm}}"
                                Width="1.5*"/>
                        <DataGridTemplateColumn Header="File"
                                    Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Tải"
                          Tag="{Binding FilePath}"
                          Click="DownloadSubmissionButton_Click"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>
    </Grid>
</Page>
