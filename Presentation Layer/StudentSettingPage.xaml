<Page x:Class="Presentation_Layer.StudentSettingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="StudentSettingPage"
      Background="{DynamicResource WindowBackgroundColor}">

    <Border Background="{DynamicResource WindowBackgroundColor}" Padding="30">
        <StackPanel>

            <!-- Tiêu đề -->
            <TextBlock Text="⚙️ Cài đặt"
                       FontSize="26"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource TextForegroundColor}"
                       Margin="0,0,0,20" />

            <!-- Đổi mật khẩu -->
            <GroupBox Margin="0,0,0,20">
                <GroupBox.Header>
                    <TextBlock Text="🔐 Đổi mật khẩu" Foreground="{DynamicResource TextForegroundColor}" />
                </GroupBox.Header>
                <StackPanel Margin="10">

                    <TextBlock Text="Mật khẩu hiện tại" Margin="0,0,0,5" Foreground="{DynamicResource TextForegroundColor}" />
                    <PasswordBox x:Name="OldPasswordBox" Margin="0,0,0,10"/>

                    <TextBlock Text="Mật khẩu mới" Margin="0,0,0,5" Foreground="{DynamicResource TextForegroundColor}" />
                    <PasswordBox x:Name="NewPasswordBox" Margin="0,0,0,10"/>

                    <TextBlock Text="Xác nhận mật khẩu mới" Margin="0,0,0,5" Foreground="{DynamicResource TextForegroundColor}" />
                    <PasswordBox x:Name="ConfirmPasswordBox" Margin="0,0,0,10"/>

                    <Button Content="Đổi mật khẩu"
                            Width="150"
                            Height="35"
                            Click="ChangePassword_Click"
                            Background="#3498DB"
                            Foreground="White"
                            FontWeight="Bold"/>
                </StackPanel>
            </GroupBox>

            <!-- Chế độ giao diện -->
            <GroupBox Margin="0,0,0,20">
                <GroupBox.Header>
                    <TextBlock Text="🌗 Giao diện" Foreground="{DynamicResource TextForegroundColor}" />
                </GroupBox.Header>
                <StackPanel Orientation="Horizontal" Margin="10">
                    <TextBlock Text="Chọn giao diện:" Foreground="{DynamicResource TextForegroundColor}" Margin="0,0,10,0"/>
                    <Button Content="🌞 Sáng" Width="80" Margin="0,0,10,0" Click="LightTheme_Click"/>
                    <Button Content="🌙 Tối" Width="80" Click="DarkTheme_Click"/>
                </StackPanel>
            </GroupBox>

            <!-- Tùy chọn khác -->
            <GroupBox>
                <GroupBox.Header>
                    <TextBlock Text="🔄 Tùy chọn khác" Foreground="{DynamicResource TextForegroundColor}" />
                </GroupBox.Header>
                <StackPanel Margin="10">
                    <Button Content="Đặt lại thông tin cá nhân"
                            Width="200"
                            Margin="0,0,0,10"
                            Click="ResetProfile_Click"
                            Foreground="{DynamicResource TextForegroundColor}"/>
                    <Button Content="Đặt lại tất cả cài đặt"
                            Width="200"
                            Click="ResetAllSettings_Click"
                            Foreground="{DynamicResource TextForegroundColor}"/>
                </StackPanel>
            </GroupBox>

        </StackPanel>
    </Border>
</Page>
