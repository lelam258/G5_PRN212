<Page x:Class="Presentation_Layer.StudentAssessmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Presentation_Layer"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="Submit Assessment">
    <Page.Resources>
        <!-- Style for DataGrid -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="#F5F6FA"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F9FAFB"/>
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#4A90E2"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Padding" Value="10,5"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="10,5"/>
                        <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Button Style with Hover Animation -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#357ABD"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#B0BEC5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox Style -->
        <Style TargetType="ComboBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- TextBox Style -->
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- ProgressBar Style with DataTrigger for Visibility -->
        <Style x:Key="ProgressBarStyle" TargetType="ProgressBar">
            <Setter Property="Height" Value="5"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="IsIndeterminate" Value="True"/>
            <Setter Property="Visibility" Value="Collapsed"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsLoading}" Value="True">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="Submit Assessment" FontSize="28" FontWeight="Bold" Foreground="#2C3E50"/>
            <Rectangle Width="2" Height="30" Fill="#4A90E2" Margin="10,0"/>
            <TextBlock Text="Upload and View Scores" FontSize="16" Foreground="#7F8C8D" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Upload Form Section -->
        <Border Grid.Row="1" Background="White" CornerRadius="5" BorderBrush="#E0E0E0" BorderThickness="1" Padding="20" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Select Assessment to Submit" FontSize="16" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,0,0,10"/>
                <ComboBox ItemsSource="{Binding Assessments}" 
                          SelectedItem="{Binding SelectedAssessment}" 
                          DisplayMemberPath="AssessmentName" 
                          Width="300" Height="30" Margin="0,0,0,10"
                          Name="dat"/>
                <TextBlock Text="Upload File" FontSize="14" Foreground="#2C3E50" Margin="0,0,0,5"/>
                <TextBox Text="{Binding FilePath, UpdateSourceTrigger=PropertyChanged}" 
                         Width="300" Height="30" Margin="0,0,0,10" IsReadOnly="True"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Button Content="Browse File" Width="100" Height="30" Command="{Binding UploadCommand}"/>
                    <Button Content="Submit Assessment" Width="150" Height="30" Margin="10,0,0,0" 
                            Command="{Binding SubmitCommand}" IsEnabled="{Binding IsSubmitEnabled}"/>
                </StackPanel>
                <TextBlock Text="{Binding StatusMessage}" Foreground="{Binding StatusColor}" FontSize="12" Margin="0,10,0,0"/>
                <ProgressBar Style="{StaticResource ProgressBarStyle}"/>
            </StackPanel>
        </Border>

        <!-- DataGrid Section -->
        <Border Grid.Row="2" Background="White" CornerRadius="5" BorderBrush="#E0E0E0" BorderThickness="1" Padding="10">
            <DataGrid ItemsSource="{Binding AssessmentResults}" 
                      AutoGenerateColumns="False" CanUserAddRows="False" 
                      CanUserDeleteRows="False" IsReadOnly="True"
                      RowHeight="40" ColumnHeaderHeight="40">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Assessment Name" Binding="{Binding Assessment.AssessmentName}" Width="2*"/>
                    <DataGridTextColumn Header="Due Date" Binding="{Binding Assessment.DueDate, StringFormat={}{0:dd/MM/yyyy}}" Width="*"/>
                    <DataGridTextColumn Header="Score" Binding="{Binding Score, StringFormat={}{0:F1}, TargetNullValue=N/A}" Width="*"/>
                    <DataGridTextColumn Header="Submission Date" Binding="{Binding SubmissionDate, StringFormat={}{0:dd/MM/yyyy}, TargetNullValue=N/A}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Footer Section -->
        <TextBlock Grid.Row="3" Text="Last Updated: 05:38 PM +07, July 21, 2025" FontSize="12" Foreground="#7F8C8D" Margin="0,20,0,0" HorizontalAlignment="Right"/>
    </Grid>
</Page>