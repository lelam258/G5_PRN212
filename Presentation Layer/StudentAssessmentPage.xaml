<Page x:Class="Presentation_Layer.StudentAssessmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Presentation_Layer"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="Submit Assessment">
    <Page.Resources>
        <!-- Style for DataGrid -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="#F5F6FA"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F9FAFB"/>
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#4A90E2"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Padding" Value="10,5"/>
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="10,5"/>
                        <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="Submit Assessment" FontSize="28" FontWeight="Bold" Foreground="#2C3E50"/>
            <Rectangle Width="2" Height="30" Fill="#4A90E2" Margin="10,0,10,0"/>
            <TextBlock Text="Upload and View Scores" FontSize="16" Foreground="#7F8C8D" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Upload Form Section -->
        <Border Grid.Row="1" Background="White" CornerRadius="5" BorderBrush="#E0E0E0" BorderThickness="1" Padding="20" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Select Assessment to Submit" FontSize="16" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,0,0,10"/>
                <ComboBox x:Name="AssessmentComboBox" Width="300" Height="30" Margin="0,0,0,10" DisplayMemberPath="AssessmentName" SelectedValuePath="AssessmentId"/>
                <TextBlock Text="Upload File" FontSize="14" Foreground="#2C3E50" Margin="0,0,0,5"/>
                <TextBox x:Name="FilePathTextBox" Width="300" Height="30" Margin="0,0,0,10" IsReadOnly="True"/>
                <Button x:Name="UploadButton" Content="Browse File" Width="100" Height="30" Click="UploadButton_Click" Background="#4A90E2" Foreground="White" Margin="0,0,10,10"/>
                <Button x:Name="SubmitButton" Content="Submit Assessment" Width="150" Height="30" Click="SubmitButton_Click" Background="#4A90E2" Foreground="White" IsEnabled="False"/>
                <TextBlock x:Name="StatusTextBlock" FontSize="12" Foreground="Red" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <!-- DataGrid Section -->
        <Border Grid.Row="2" Background="White" CornerRadius="5" BorderBrush="#E0E0E0" BorderThickness="1" Padding="10">
            <DataGrid x:Name="ScoresDataGrid" AutoGenerateColumns="False" 
                      CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True"
                      ItemsSource="{Binding AssessmentResults}" SelectionMode="Single"
                      RowHeight="40" ColumnHeaderHeight="40">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Assessment Name" Binding="{Binding Assessment.AssessmentName}" Width="2*"/>
                    <DataGridTextColumn Header="Due Date" Binding="{Binding Assessment.DueDate, StringFormat={}{0:dd/MM/yyyy}}" Width="*"/>
                    <DataGridTextColumn Header="Score" Binding="{Binding Score, StringFormat={}{0:F1}}" Width="*"/>
                    <DataGridTextColumn Header="Submission Date" Binding="{Binding SubmissionDate, StringFormat={}{0:dd/MM/yyyy}}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Footer Section -->
        <TextBlock Grid.Row="3" Text="Last Updated: 01:05 AM +07, July 12, 2025" FontSize="12" Foreground="#7F8C8D" Margin="0,20,0,0" HorizontalAlignment="Right"/>
    </Grid>
</Page>