<Page x:Class="Presentation_Layer.StudentNotificationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="StudentNotificationPage"
      Background="{DynamicResource WindowBackgroundColor}">

    <Page.Resources>
        <Style TargetType="ListViewItem">
            <Setter Property="Foreground" Value="{DynamicResource TextForegroundColor}" />
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="{DynamicResource WindowBackgroundColor}" />
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Padding" Value="8"/>
        </Style>
    </Page.Resources>

    <Border Padding="20" BorderBrush="#444" BorderThickness="1">
        <StackPanel>
            <TextBlock Text="🔔 Thông báo"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="{DynamicResource TextForegroundColor}"
                       Margin="0,0,0,20"/>

            <ListView x:Name="NotificationListView"
                      ItemsSource="{Binding NotificationItems}"
                      Background="{DynamicResource WindowBackgroundColor}"
                      BorderBrush="#444"
                      BorderThickness="1">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#666" BorderThickness="0 0 0 1" Padding="4">
                            <StackPanel>
                                <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="15"
                                           Foreground="{DynamicResource TextForegroundColor}" />
                                <TextBlock Text="{Binding Content}" TextWrapping="Wrap"
                                           Foreground="{DynamicResource TextForegroundColor}" Margin="0,2,0,0"/>
                                <TextBlock Text="{Binding CreatedDate}" FontStyle="Italic" FontSize="12"
                                           Foreground="Gray" HorizontalAlignment="Right"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Border>
</Page>
