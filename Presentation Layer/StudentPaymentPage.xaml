<Page x:Class="Presentation_Layer.StudentPaymentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="StudentPaymentPage"
      Background="{DynamicResource WindowBackgroundColor}">

    <Page.Resources>
        <!-- Style for DataGrid Row -->
        <Style TargetType="DataGridRow">
            <Setter Property="Foreground" Value="{DynamicResource TextForegroundColor}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="{DynamicResource WindowBackgroundColor}"/>
        </Style>

        <!-- Style for DataGrid Cell -->
        <Style TargetType="DataGridCell">
            <Setter Property="Foreground" Value="{DynamicResource TextForegroundColor}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0.5"/>
            <Setter Property="BorderBrush" Value="#666"/>
            <Setter Property="Padding" Value="8,4"/>
        </Style>

        <!-- Style for DataGrid Column Header -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Foreground" Value="{DynamicResource TextForegroundColor}"/>
            <Setter Property="Background" Value="Gray"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="BorderThickness" Value="0 0 0 1"/>
        </Style>
    </Page.Resources>

    <Border Padding="20" BorderBrush="#444" BorderThickness="1">
        <StackPanel>
            <TextBlock Text="💳 Trạng thái thanh toán"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="{DynamicResource TextForegroundColor}"
                       Margin="0,0,0,20"/>

            <DataGrid x:Name="PaymentDataGrid"
          ItemsSource="{Binding PaymentItems}"
          AutoGenerateColumns="False"
          HeadersVisibility="Column"
          CanUserAddRows="False"
          GridLinesVisibility="None"
          Background="{DynamicResource WindowBackgroundColor}"
          Foreground="{DynamicResource TextForegroundColor}"
          RowBackground="{DynamicResource WindowBackgroundColor}"
          AlternatingRowBackground="#383838"
          FontFamily="Segoe UI"
          BorderBrush="#444"
          BorderThickness="1"
          ColumnHeaderHeight="40"
          RowHeight="36">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Tên khóa học" Binding="{Binding CourseName}" Width="*" />
                    <DataGridTextColumn Header="Số tiền" Binding="{Binding Amount}" Width="*" />
                    <DataGridTextColumn Header="Ngày thanh toán" Binding="{Binding PaymentDate}" Width="*" />
                    <DataGridTextColumn Header="Trạng thái" Binding="{Binding Status}" Width="*" />
                </DataGrid.Columns>
            </DataGrid>

        </StackPanel>
    </Border>
</Page>
