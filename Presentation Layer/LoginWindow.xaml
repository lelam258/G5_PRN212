<Window x:Class="Presentation_Layer.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentation_Layer"
        mc:Ignorable="d"
           Title="Đăng nhập" Height="400" Width="400" WindowStartupLocation="CenterScreen"
    Background="#F4F4F4">
    <Grid>
        <Border Background="White" CornerRadius="10" Padding="20" Margin="20">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Đăng nhập" FontSize="20" FontWeight="Bold" Foreground="#333" TextAlignment="Center" Margin="0,0,0,20"/>
                <TextBlock Text="Vai trò" FontWeight="Bold" Foreground="#555"/>
                <ComboBox x:Name="StatusComboBox" Height="30" FontSize="14" Padding="5" Margin="0,5,0,10" SelectionChanged="Status_SelectionChanged">
                    <ComboBoxItem Content="Người học" IsSelected="True"/>
                    <ComboBoxItem Content="Quản trị viên"/>
                </ComboBox>
                <TextBlock Text="Mã người dùng" FontWeight="Bold" Foreground="#555"/>
                <TextBox Name="TxtCodeName" Height="30" FontSize="14" Background="#EEE" BorderBrush="Gray" Margin="0,5,0,10"/>

                <TextBlock Text="Mật khẩu" FontWeight="Bold" Foreground="#555"/>
                <PasswordBox Name="TxtPassword" Height="30" FontSize="14" Background="#EEE" BorderBrush="Gray" Margin="0,5,0,20"/>

                <Button Content="Đăng nhập" Width="100" Height="35" Background="#0078D7" Foreground="White"
                    FontWeight="Bold" BorderThickness="0" HorizontalAlignment="Center" Click="BtnLogin_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
