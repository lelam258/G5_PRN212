<Page x:Class="Presentation_Layer.StudentCourseSchedulePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="StudentCourseSchedulePage"
      Background="{DynamicResource WindowBackgroundColor}">

    <Page.Resources>
        <!-- Header -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Foreground" Value="{DynamicResource TextForegroundColor}" />
            <Setter Property="Background" Value="Gray" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Padding" Value="10,4" />
            <Setter Property="BorderBrush" Value="#444" />
            <Setter Property="BorderThickness" Value="0 0 0 1" />
        </Style>

        <!-- Cell -->
        <Style TargetType="DataGridCell">
            <Setter Property="Foreground" Value="{DynamicResource TextForegroundColor}" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="BorderThickness" Value="0.5" />
            <Setter Property="BorderBrush" Value="#666" />
            <Setter Property="Padding" Value="8,4" />
        </Style>

        <!-- Row -->
        <Style TargetType="DataGridRow">
            <Setter Property="Foreground" Value="{DynamicResource TextForegroundColor}" />
            <Setter Property="Background" Value="{DynamicResource WindowBackgroundColor}" />
        </Style>
    </Page.Resources>

    <Border Padding="20" BorderBrush="#444" BorderThickness="1">
        <StackPanel>
            <TextBlock Text="📅 Lịch học"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="{DynamicResource TextForegroundColor}"
                       Margin="0,0,0,20"/>

            <DataGrid x:Name="ScheduleDataGrid"
                      ItemsSource="{Binding ScheduleItems}"
                      AutoGenerateColumns="False"
                      HeadersVisibility="Column"
                      CanUserAddRows="False"
                      GridLinesVisibility="None"
                      Background="{DynamicResource WindowBackgroundColor}"
                      Foreground="{DynamicResource TextForegroundColor}"
                      RowBackground="{DynamicResource WindowBackgroundColor}"
                      AlternatingRowBackground="#383838"
                      FontFamily="Segoe UI"
                      BorderBrush="#444"
                      BorderThickness="1"
                      ColumnHeaderHeight="40"
                      RowHeight="36">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Tên khóa học" Binding="{Binding CourseName}" Width="*" />
                    <DataGridTextColumn Header="Ngày học" Binding="{Binding SessionDate}" Width="*" />
                    <DataGridTextColumn Header="Bắt đầu" Binding="{Binding StartTime}" Width="*" />
                    <DataGridTextColumn Header="Kết thúc" Binding="{Binding EndTime}" Width="*" />
                    <DataGridTextColumn Header="Phòng" Binding="{Binding Room}" Width="*" />
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Border>
</Page>
