<Page x:Class="Presentation_Layer.AdminAssessmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Presentation_Layer"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="AdminAssessmentPage">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Filter -->
            <RowDefinition Height="*"/>
            <!-- Main -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
               Text="Quản lý Bài kiểm tra"
               FontSize="28"
               FontWeight="Bold"
               Foreground="#2C3E50"
               Margin="0,0,0,10"/>

        <!-- Filter panel -->
        <Border Grid.Row="1"
            Background="White"
            CornerRadius="8"
            BorderBrush="#DDD"
            BorderThickness="1"
            Padding="10"
            Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Khóa học:" VerticalAlignment="Center"/>
                <ComboBox x:Name="FilterCourseComboBox"
                  Width="200"
                  DisplayMemberPath="CourseName"
                  SelectedValuePath="CourseId"/>
                <Button Content="Lọc" Width="80" Height="30"
                Background="#2C3E50" Foreground="White"
                Click="FilterButton_Click"/>
                <Button Content="Mặc định" Width="80" Height="30"
                Background="#7F8C8D" Foreground="White"
                Click="ResetFilterButton_Click"/>
            </StackPanel>
        </Border>

        <!-- Main: form & grid -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Form CRUD -->
            <Border Grid.Column="0"
              Background="White"
              CornerRadius="8"
              BorderBrush="#DDD"
              BorderThickness="1"
              Padding="20">
                <StackPanel>
                    <TextBlock Text="Chi tiết Bài kiểm tra"
                     FontSize="20" FontWeight="SemiBold"
                     Margin="0,0,0,10"/>

                    <TextBlock Text="Khóa học" FontWeight="SemiBold"/>
                    <ComboBox x:Name="CourseFormComboBox"
                    DisplayMemberPath="CourseName"
                    SelectedValuePath="CourseId"
                    Height="30"/>

                    <TextBlock Text="Tên bài kiểm tra" FontWeight="SemiBold"/>
                    <TextBox x:Name="NameTextBox" Height="30"/>

                    <TextBlock Text="Loại (vd: Trắc nghiệm)" FontWeight="SemiBold"/>
                    <TextBox x:Name="TypeTextBox" Height="30"/>

                    <TextBlock Text="Hướng dẫn" FontWeight="SemiBold"/>
                    <TextBox x:Name="InstructionsTextBox"
                   Height="80"
                   TextWrapping="Wrap"
                   AcceptsReturn="True"/>

                    <TextBlock Text="Điểm tối đa" FontWeight="SemiBold"/>
                    <TextBox x:Name="MaxScoreTextBox" Height="30"/>

                    <TextBlock Text="Hạn nộp" FontWeight="SemiBold"/>
                    <DatePicker x:Name="DueDatePicker" Height="30"/>

                    <TextBlock Text="File đính kèm (Word/PDF)" FontWeight="SemiBold" Margin="0,10,0,5"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBox x:Name="FilePathTextBox"
                        Width="220"
                        IsReadOnly="True"
                        
                        Margin="0,0,5,0"/>
                        <Button Content="Chọn file…" 
                                  Width="80" 
                                  Click="BrowseFileButton_Click"/>
                    </StackPanel>
                    <!-- Buttons -->
                    <StackPanel Orientation="Horizontal"
                      HorizontalAlignment="Center"
                      Margin="0,15,0,0">
                        <Button x:Name="AddButton" Content="Thêm mới" Width="80" Click="AddButton_Click"
                    Background="#27AE60" Foreground="White"/>
                        <Button x:Name="UpdateButton" Content="Cập nhật" Width="80" Click="UpdateButton_Click"
                    Background="#2980B9" Foreground="White" IsEnabled="False"/>
                        <Button x:Name="DeleteButton" Content="Xóa" Width="80" Click="DeleteButton_Click"
                    Background="#C0392B" Foreground="White" IsEnabled="False"/>
                        <Button x:Name="ClearButton" Content="Nhập lại" Width="80" Click="ClearButton_Click"
                    Background="#7F8C8D" Foreground="White"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="10" Background="#CCC" HorizontalAlignment="Center"/>

            <!-- DataGrid danh sách -->
            <Border Grid.Column="2"
              Background="White"
              CornerRadius="8"
              BorderBrush="#DDD"
              BorderThickness="1"
              Padding="10">
                <DataGrid x:Name="AssessmentsDataGrid"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionChanged="AssessmentsDataGrid_SelectionChanged"
                  RowBackground="#F9FBFC"
                  AlternatingRowBackground="White"
                  GridLinesVisibility="Horizontal"
                  RowHeight="30"
                  ColumnHeaderHeight="35">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID"
                                Binding="{Binding AssessmentId}"
                                Width="50"/>
                        <DataGridTextColumn Header="Tên bài kiểm tra"
                                Binding="{Binding AssessmentName}"
                                Width="2*"/>
                        <DataGridTextColumn Header="Loại"
                                Binding="{Binding AssessmentType}"
                                Width="*"/>
                        <DataGridTextColumn Header="Điểm tối đa"
                                Binding="{Binding MaxScore}"
                                Width="80"/>
                        <DataGridTextColumn Header="Hạn nộp"
                                Binding="{Binding DueDate, StringFormat={}{0:dd/MM/yyyy}}"
                                Width="120"/>
                        <DataGridTextColumn Header="Khóa học"
                                Binding="{Binding CourseName}"
                                Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>
    </Grid>
</Page>
